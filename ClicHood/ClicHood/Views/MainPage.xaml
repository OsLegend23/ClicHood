<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ClicHood"
             x:Class="ClicHood.Views.MainPage"
             xmlns:ViewModels="clr-namespace:ClicHood.ViewModels"
             BackgroundColor="White">

    <ContentPage.BindingContext>
        <ViewModels:UsuarioViewModel/>
    </ContentPage.BindingContext>

    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness"
                    iOS="20, 40, 20, 20"
                    Android="20, 20, 20, 20"
                    WinPhone="20, 20, 20, 20" />
    </ContentPage.Padding>

    <ContentPage.Content>
        <RelativeLayout>
            
            <Grid RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width}"
                  RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height}">
                <Image Source="logo"
                       VerticalOptions="StartAndExpand"
                       HorizontalOptions="Center"
                       WidthRequest="256"
                       HeightRequest="256"/>
            </Grid>

            <Grid RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width}"
                      RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height}">

                <StackLayout Orientation="Horizontal"
                             HorizontalOptions="FillAndExpand"
                             VerticalOptions="EndAndExpand"
                             Padding="10, 0, 10, 50">

                    <StackLayout Orientation="Vertical"
                                 HorizontalOptions="FillAndExpand">

                        <Button x:Name="btnAcceso"
                                Text="Acceder"
                                BackgroundColor="#2196f3"
                                Clicked="btnAcceso_Clicked"/>

                    </StackLayout>

                    <StackLayout Orientation="Vertical"
                             HorizontalOptions="FillAndExpand">
                        <Button x:Name="btnRegistro"
                                Text="Registro"
                                BackgroundColor="#2196f3"
                                Clicked="btnRegistro_Clicked"/>
                    </StackLayout>

                </StackLayout>
            </Grid>
        </RelativeLayout>
    </ContentPage.Content>
</ContentPage>